@model Product

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateProductToDatabase", "Product", "Post"))
{
        <input asp-for="ProductID" type="hidden" value="@Model.ProductID" />

        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" />

        <label asp-for="Price" class="control-label">Price</label>    
        <input type="number" step="0.01" name="Price" class="form-control" value="@Model.Price" />

        <label asp-for="OnSale" class="control-label">On Sale</label>
        <input type="number" step="0.01" name="OnSale" class="form-control" value="@Model.OnSale" />

        <label asp-for="StockLevel" class="control-label">Stock Level</label>
        <input type="number" step="0.01" name="StockLevel" class="form-control" value="@Model.StockLevel" />

        <input type="submit" value="Update Product" class="btn btn-primary" />
}